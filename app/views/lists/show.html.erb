<div class ="container">
  <div class="card-trip">
    <% if @list.photo.attached? %>
      <%= cl_image_tag @list.photo.key, height: 300, width: 400%>
    <% else %>
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
    <% end %>
      <div class="card-trip-infos">
        <h2><%= @list.name %>'s Bookmarks</h2>
      <div class="options">
        <div class="list-delete">
          <%= link_to "Delete",
            list_path(@list),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </div>
          <div class="lis-edit">
            <%= link_to "Edit", edit_list_path(@list) %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-trip-comment">
        <% @list.bookmarks.each do|b|%>
          <div class="card-infos">
            <p><%=b.comment %></p>
            <div class="comment">
              <%= link_to "Delete comment?",
                bookmark_path(b),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
              </div>
            </div>
           <% end %>
          </div>
        </div>





